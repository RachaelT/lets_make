<%= form_for @instruction, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :full_txt, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :full_txt, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :thumb_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :thumb_url, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :has_image, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :has_image, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :position, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :position, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  instructions_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
