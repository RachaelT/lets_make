<h1>Listing instructions</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Full txt</th>
      <th>Thumb url</th>
      <th>Has image</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructions.each do |instruction| %>
      <tr>
        <td><%= instruction.project %></td>
        <td><%= instruction.full_txt %></td>
        <td><%= instruction.thumb_url %></td>
        <td><%= instruction.has_image %></td>
        <td><%= instruction.position %></td>
        <td><%= link_to 'Show', instruction %></td>
        <td><%= link_to 'Edit', edit_instruction_path(instruction) %></td>
        <td><%= link_to 'Destroy', instruction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instruction', new_instruction_path %>
