<%- model_class = Instruction -%>
<div class="page-header">
  <h1><%=t '.title', :default => Instruction %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:full_txt) %></th>
      <th><%= model_class.human_attribute_name(:thumb_url) %></th>
      <th><%= model_class.human_attribute_name(:has_image) %></th>
      <th><%= model_class.human_attribute_name(:position) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @instructions.each do |instruction| %>
      <tr>
        <td><%= instruction.id %></td>
        <td><%= instruction.full_txt %></td>
        <td><%= instruction.thumb_url %></td>
        <td><%= instruction.has_image %></td>
        <td><%= instruction.position %></td>
        <td><%=l instruction.created_at, format: :long %></td>
        <td>
          <%= link_to instruction_path(instruction), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to instruction_path(instruction), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_instruction_path,
            :class => 'btn btn-primary' %>
