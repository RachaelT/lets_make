<%- model_class = Project -%>
<div class="page-header">
  <h1><%=t '.title', :default => Project %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @project.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:thumb_url) %></dt>
      <dd><pre class="prettyprint"><%= @project.thumb_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:author) %></dt>
      <dd><pre class="prettyprint"><%= @project.author %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:author_url) %></dt>
      <dd><pre class="prettyprint"><%= @project.author_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:difficulty) %></dt>
      <dd><pre class="prettyprint"><%= @project.difficulty %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:length) %></dt>
      <dd><pre class="prettyprint"><%= @project.length %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:how_students_work) %></dt>
      <dd><pre class="prettyprint"><%= @project.how_students_work %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cost_per_student) %></dt>
      <dd><pre class="prettyprint"><%= @project.cost_per_student %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:video_url) %></dt>
      <dd><pre class="prettyprint"><%= @project.video_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:skills) %></dt>
      <dd><pre class="prettyprint"><%= @project.skills %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:category) %></dt>
      <dd><pre class="prettyprint"><%= @project.category %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              projects_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_project_path(@project), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              project_path(@project),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

