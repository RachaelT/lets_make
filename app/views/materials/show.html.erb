<%- model_class = Material -%>
<div class="page-header">
  <h1><%=t '.title', :default => Material %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:object) %></dt>
      <dd><pre class="prettyprint"><%= @material.object %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:where_to_buy) %></dt>
      <dd><pre class="prettyprint"><%= @material.where_to_buy %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:amount) %></dt>
      <dd><pre class="prettyprint"><%= @material.amount %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:per_student) %></dt>
      <dd><pre class="prettyprint"><%= @material.per_student %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              materials_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_material_path(@material), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              material_path(@material),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

