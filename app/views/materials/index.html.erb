<h1>Listing materials</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Object</th>
      <th>Where to buy</th>
      <th>Amount</th>
      <th>Per student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.project %></td>
        <td><%= material.object %></td>
        <td><%= material.where_to_buy %></td>
        <td><%= material.amount %></td>
        <td><%= material.per_student %></td>
        <td><%= link_to 'Show', material %></td>
        <td><%= link_to 'Edit', edit_material_path(material) %></td>
        <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Material', new_material_path %>
